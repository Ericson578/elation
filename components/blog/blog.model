{
  "name":"blog",
  "classes":{
    "Blog":{
      "table":"blog",
      "props":{
        "blogname": ["blogname", "varchar", {"pk":true}],
        "title":    ["title", "varchar"],
        "subtitle": ["subtitle", "varchar"],
        "owner":    ["owner", "varchar"]
      },
      "form":{
        "method": "get",
				"class": "html_form",
				"name": "create_post",
				"id": "create_post",
        "elements": {
          "subject": {
            "name": "subject",
            "type": "text",
            "options": {
              "belongsTo": "blogpost",
	            "value": "(No Subject)",
              "label": "Subject",
              "validators": {
                "alpha": {
                  "validator": "NotEmpty"
                }             
              },
              "filters": {
                "stringtrim": "StringTrim"
              } 
            }
          },
					"content": {
            "type": "textarea",
            "name": "content",
            "options": {
              "belongsTo": "blogpost",
              "label": "Content",
							"rows": "10",
							"cols": 40,							
              "validators": {
                "alpha": {
                  "validator": "NotEmpty"
                }             
              },
              "filters": {
                "stringtrim": "StringTrim"
              } 
            }
          },
					"add_post": {
            "type": "submit",
            "name": "add_post",
            "options": {
              "value": "Add Post"
            }
          }
        }			
      },
      "associations":[
        ["one-to-many", "BlogPost", {"key":"blogname"}]
      ]
    },
    "BlogPost":{
      "table":"blog_post",
      "props":{
        "blogpostid":["blogpostid", "varchar", {"pk":true}],
        "blogname":["blogname", "varchar"],
        "subject":["subject", "varchar"],
        "content":["content", "text"],
        "timestamp":["timestamp", "datetime"]
      },
      "associations":[
        ["many-to-one", "Blog", {"key":"blogname"}]
      ]
    }
  }
}
